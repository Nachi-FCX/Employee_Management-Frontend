{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "lib": ["ES2020"],
    "module": "commonjs",
    "moduleResolution": "node",

    /* Project Structure */
    "rootDir": "./src",
    "outDir": "./dist",

    /* Interop & Imports */
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "skipLibCheck": true,

    /* Source Maps */
    "sourceMap": true
  },

  "include": ["src/**/*"],
  "exclude": ["node_modules", "dist"]
}
